---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import ImageProfile from "@assets/profile.jpg";
import GitHubLogo from "@assets/icon-github.svg";
import LinkedinLogo from "@assets/icon-linkedin.svg";
---

<Layout title="Santicue14 | Web Developer">
	<main
		class="text-white flex lg:flex-row flex-col-reverse justify-between items-center lg:px-64 lg:py-28 "
	>
		<div class="info pt-12 font-bold items-center text-center justify-center lg:text-start  h-full">
			<p>Hi there!</p>
			<h2 class="text-2xl">
				I'm <span class="text-cyan-700">Santiago Cuevas</span>
			</h2>
			<h3 class="text-xl typewriter w-fit">Web Developer.</h3>
			<div class="media flex space-x-12 mt-4">
				<a href="https://github.com/Santicue14" target="_blank" rel="noopener noreferrer">
					<div
						class="container-media bg-cyan-800 hover:saturate-50 transition-colors px-3"
					>
						<Image src={GitHubLogo} alt={"Logo github"} loading={"eager"}/>
						GitHub
					</div>
				</a>
				<a href="https://www.linkedin.com/in/santiagocuevas147/" target="_blank" rel="noopener noreferrer">
					<div
						class="container-media bg-cyan-500 hover:saturate-50 transition-colors px-3"
					>
						<Image src={LinkedinLogo} alt={"Logo github"} loading={"eager"}/>
						Linkedin
					</div>
				</a>
			</div>
		</div>
		<div class="photo h-full">
			<Image
				src={ImageProfile}
				alt={"Imagen de perfil Santicue14"}
				class="size-52 rounded-full"
				loading={"eager"}
			/>
		</div>
	</main>
</Layout>

<style scoped>
	.container-media {
		@apply flex gap-3 py-2 h-8 rounded-lg transition-colors items-center;
	}
	.typewriter {
		overflow: hidden; 
		border-right: 4px solid #e0eaf0; 
		white-space: nowrap;
		width: fit-content;
		animation:
			typing 2s steps(14) 1s 1 normal both,
			blink 0.6s infinite;
	}
	@keyframes typing {
		from {
			width: 0;
		}
		50%{
			width: 50%;
		}
		to {
			width: fit-content;
		}
	}

	/* Animaci√≥n del parpadeo del cursor */
	@keyframes blink {
		50% {
			border-color: transparent;
		}
	}
</style>
